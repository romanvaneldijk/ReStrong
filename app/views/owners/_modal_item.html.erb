<div class="modal fade" id="AddItem" tabindex="-1" role="dialog" aria-labelledby="AddItemTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-info" style="border-radius: 10px; boxshadow:2px">
      <div class="modal-header text-center">
        <h5 class="modal-title text-center" id="exampleModalLongTitle">Create a new item</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-left">
          <%= simple_form_for @item do |f| %>
            <%= f.input :name,required: true %>
            <%= f.input :description,required: true %>
            <%= f.input :price,required: true %>
            <%= f.input :photo, as: :file %>
            <div class="d-flex justify-content-center">
            <%= f.submit class: "submit btn-primary vw-100 m-1 p-3 text-nowrap text-center" %>
            </div>

          <% end %>
      </div>

        <!--
        <button type="button" class="btn-primary vw-100 m-1 text-nowrap" style="box-shadow: 0 0 0px rgba(0,0,0,0);; position:sticky; color:white; text-decoration:none; border-radius:30px;">CLOSE</button>
        -->

    </div>
  </div>
</div>
