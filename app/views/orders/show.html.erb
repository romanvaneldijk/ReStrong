        <i class="fas fa-minus-circle"></i>
      <% end %>
      (<%= quantity %>)
      <%= link_to order_items_path(item_id: key), class: "plus_button", method: :post do %>
        <i class="fa fa-plus-circle"></i>
      <% end %>
    </div>
  <% end %>
</div>
