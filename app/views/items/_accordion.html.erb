  <% i = 0 %>
  <% @items.each do |item| %>
    <div id="accordion">
      <div class="card bg-transparent">
        <div class="card-product d-flex justify-content-between text-center collapse panel-collapse p-2" id="headingOne<%= i.to_s %>">
            <% if item.photo.attached? %>
              <%= cl_image_tag item.photo.key, height: 150, width: 150, crop: :fill, class: "m-0 p-2" %>
            <% else %>
              <img class ="m-0 p-2" src="https://media.istockphoto.com/photos/shakh-plov-picture-id1214641059?b=1&k=20&m=1214641059&s=170667a&w=0&h=O5nQMbhqaDaQFbM49RJpbTagWZMhaxo6C27-mgeRdbs="/>
            <% end %>
            <div id="name_content" class="m-1">
              <div>
                <%= item.name %>
              </div>
              <div>
                <button class="btn btn-link text-nowrap" data-toggle="collapse" data-target="#collapseOne<%= i.to_s %>" aria-expanded="true" aria-controls="collapseOne<%= i.to_s %>">
                  Description
                </button>
              </div>
            </div>
            <div id="price_button" class="m-1">
            <%= item.price %>â‚¬
              <div class="button-bottom pt-2">
              <%= link_to order_items_path(item_id: item), method: :post, id: "addTocart", class: "btn btn-primary" do %>
              <i class="fas fa-cart-plus"></i>
            <% end %>
            </div>
          </div>
        </div>
        <div id="collapseOne<%= i.to_s %>" class="collapse hidden" aria-labelledby="headingOne<%= i.to_s %>" data-parent="#accordion">
          <div class="card-body">
            <h6>Description</h6>
            <%= item.description %>
          </div>
        </div>
      </div>
    </div>
    <% i+=1 %>
  <% end %>
